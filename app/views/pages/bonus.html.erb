<h1>Bonus</h1>

<table style="width:100%">

  <tr style="color: red">
    <th>First Name</th>
    <th>Last Name</th> 
    <th>Email</th>
  </tr>

  <% @people.each do |person| %>
    <tr>
      <td><%= person[:first_name] %></td>
      <td><%= person[:last_name] %></td> 
      <td><%= person[:email_address] %></td>
    </tr>
  <% end %>

</table>

